<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Food Entries - CICO Tracker</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <style>
      @keyframes spin-slow {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
      }
      @keyframes spin-medium {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
      }
      @keyframes spin-fast {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
      }
      .spinner-slow {
        animation: spin-slow 3s linear infinite;
      }
      .spinner-medium {
        animation: spin-medium 1.5s linear infinite;
      }
      .spinner-fast {
        animation: spin-fast 0.8s linear infinite;
      }
    </style>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">ğŸ½ï¸ CICO Tracker</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/food-entries">Food Entries</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/food-entries/create">Add Food Entry</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/settings">Settings</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container mt-5">
      <!-- Total Calories Card -->
      <div class="row mb-4">
        <div class="col-md-12">
          <div class="card shadow <%= totalCalories < targetCalories ? 'border-success' : totalCalories < limitCalories ? 'border-warning' : 'border-danger' %>">
            <div class="card-body text-center">
              <div class="d-flex justify-content-center align-items-center">
                <div class="spinner-border <%= totalCalories < targetCalories ? 'text-success spinner-slow' : totalCalories < limitCalories ? 'text-warning spinner-medium' : 'text-danger spinner-fast' %>" 
                     role="status" style="width: 3rem; height: 3rem;">
                  <span class="visually-hidden">Loading...</span>
                </div>
                <h2 class="ms-3 mb-0">Total Calories: 
                  <span class="<%= totalCalories < targetCalories ? 'text-success' : totalCalories < limitCalories ? 'text-warning' : 'text-danger' %>">
                    <%= totalCalories %>
                  </span> cal
                </h2>
              </div>
              <% 
                let statusMessage = '';
                if (totalCalories < targetCalories) {
                  statusMessage = 'âœ… Great! You\'re on track!';
                } else if (totalCalories < limitCalories) {
                  statusMessage = 'âš ï¸ Moderate intake - watch your next meals!';
                } else {
                  statusMessage = 'ğŸ”´ High calorie intake - consider exercise!';
                }
              %>
              <p class="mt-2 mb-1"><%= statusMessage %></p>
              <small class="text-muted">
                Target: <%= targetCalories %> cal | Limit: <%= limitCalories %> cal
                <a href="/settings" class="ms-2 text-decoration-none">âš™ï¸ Edit</a>
              </small>
            </div>
          </div>
        </div>
      </div>

      <!-- Search/Filter Section -->
      <div class="row mb-4">
        <div class="col-md-12">
          <div class="card shadow">
            <div class="card-header bg-info text-white">
              <h4 class="mb-0">ğŸ” Search & Filter Food Entries</h4>
            </div>
            <div class="card-body">
              <form method="GET" action="/food-entries">
                <div class="row g-3">
                  <!-- Food Name Search with Datalist -->
                  <div class="col-md-6">
                    <label for="searchFood" class="form-label"><strong>ğŸ” Food Name</strong></label>
                    <input 
                      class="form-control" 
                      list="foodOptions" 
                      id="searchFood" 
                      name="searchFood"
                      placeholder="Type to search foods..."
                      value="<%= searchFood %>">
                    <datalist id="foodOptions">
                      <% allFoods.forEach(function(food) { %>
                        <option value="<%= food.foodName %>">
                      <% }); %>
                    </datalist>
                    <div class="form-text">Start typing to see suggestions</div>
                  </div>

                  <!-- Meal Type Filter -->
                  <div class="col-md-6">
                    <label for="searchMeal" class="form-label"><strong>ğŸ• Meal Type</strong></label>
                    <select class="form-select" id="searchMeal" name="searchMeal">
                      <option value="">All Meals</option>
                      <% meals.forEach(function(meal) { %>
                        <option value="<%= meal.id %>" <%= searchMeal == meal.id ? 'selected' : '' %>>
                          <% if (meal.name === 'Breakfast') { %>
                            ğŸŒ… <%= meal.name %>
                          <% } else if (meal.name === 'Lunch') { %>
                            â˜€ï¸ <%= meal.name %>
                          <% } else if (meal.name === 'Dinner') { %>
                            ğŸŒ™ <%= meal.name %>
                          <% } else if (meal.name === 'Snack') { %>
                            ğŸ¿ <%= meal.name %>
                          <% } else { %>
                            <%= meal.name %>
                          <% } %>
                        </option>
                      <% }); %>
                    </select>
                    <div class="form-text">Filter by meal type</div>
                  </div>

                  <!-- Min Calories -->
                  <div class="col-md-6">
                    <label for="minCalories" class="form-label"><strong>ğŸ”¥ Min Calories</strong></label>
                    <input 
                      type="number" 
                      class="form-control" 
                      id="minCalories" 
                      name="minCalories"
                      placeholder="e.g., 100"
                      value="<%= minCalories %>"
                      min="0">
                    <div class="form-text">Minimum calorie amount</div>
                  </div>

                  <!-- Max Calories -->
                  <div class="col-md-6">
                    <label for="maxCalories" class="form-label"><strong>ğŸ”¥ Max Calories</strong></label>
                    <input 
                      type="number" 
                      class="form-control" 
                      id="maxCalories" 
                      name="maxCalories"
                      placeholder="e.g., 1000"
                      value="<%= maxCalories %>"
                      min="0">
                    <div class="form-text">Maximum calorie amount</div>
                  </div>
                </div>

                <!-- Search Buttons -->
                <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                  <a href="/food-entries" class="btn btn-secondary">ğŸ”„ Clear Filters</a>
                  <button type="submit" class="btn btn-info text-white">ğŸ” Search</button>
                </div>
              </form>

              <!-- Active Filters Display -->
              <% if (searchFood || searchMeal || minCalories || maxCalories) { %>
                <div class="alert alert-info mt-3 mb-0">
                  <strong>ğŸ¯ Active Filters:</strong>
                  <div class="mt-2">
                    <% if (searchFood) { %>
                      <span class="badge bg-primary me-2">Food: <%= searchFood %></span>
                    <% } %>
                    <% if (searchMeal) { %>
                      <% const selectedMeal = meals.find(m => m.id == searchMeal); %>
                      <span class="badge bg-primary me-2">Meal: <%= selectedMeal ? selectedMeal.name : searchMeal %></span>
                    <% } %>
                    <% if (minCalories) { %>
                      <span class="badge bg-primary me-2">Min Cal: <%= minCalories %></span>
                    <% } %>
                    <% if (maxCalories) { %>
                      <span class="badge bg-primary me-2">Max Cal: <%= maxCalories %></span>
                    <% } %>
                  </div>
                  <small class="text-muted d-block mt-2">Showing <%= foodEntries.length %> result(s)</small>
                </div>
              <% } %>
            </div>
          </div>
        </div>
      </div>

      <div class="row mb-4">
        <div class="col-md-12">
          <h1>Food Entries</h1>
          <a href="/food-entries/create" class="btn btn-success">â• Add New Entry</a>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12">
          <div class="table-responsive">
            <table class="table table-striped table-hover">
              <thead class="table-dark">
                <tr>
                  <th>Date & Time</th>
                  <th>Name</th>
                  <th>Calories</th>
                  <th>Serving Size</th>
                  <th>Meal</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% if (foodEntries.length === 0) { %>
                <tr>
                  <td colspan="6" class="text-center text-muted">
                    <% if (searchFood || searchMeal || minCalories || maxCalories) { %>
                      <em>No food entries found matching your search criteria. Try different filters!</em>
                    <% } else { %>
                      <em>No food entries yet. Start tracking by adding your first meal!</em>
                    <% } %>
                  </td>
                </tr>
                <% } else { %>
                  <% for (let foodEntry of foodEntries) { 
                    let mealName = 'N/A';
                    switch(foodEntry.meal_id) {
                      case 1: mealName = 'N/A'; break;
                      case 2: mealName = 'Breakfast'; break;
                      case 3: mealName = 'Lunch'; break;
                      case 4: mealName = 'Dinner'; break;
                      case 5: mealName = 'Snack'; break;
                    }
                  %>
                  <tr>
                    <td><%= new Date(foodEntry.dateTime).toLocaleString() %></td>
                    <td><%= foodEntry.foodName %></td>
                    <td><span class="badge bg-info"><%= foodEntry.calories %> cal</span></td>
                    <td><%= foodEntry.servingSize %> <%= foodEntry.unit %></td>
                    <td>
                      <% if (mealName === 'Breakfast') { %>
                        <span class="badge bg-warning text-dark">ğŸŒ… <%= mealName %></span>
                      <% } else if (mealName === 'Lunch') { %>
                        <span class="badge bg-primary">â˜€ï¸ <%= mealName %></span>
                      <% } else if (mealName === 'Dinner') { %>
                        <span class="badge bg-dark">ğŸŒ™ <%= mealName %></span>
                      <% } else if (mealName === 'Snack') { %>
                        <span class="badge bg-success">ğŸ¿ <%= mealName %></span>
                      <% } else { %>
                        <span class="badge bg-secondary"><%= mealName %></span>
                      <% } %>
                    </td>
                    <td>
                      <a href="/food-entries/edit/<%= foodEntry.id %>" class="btn btn-primary btn-sm">âœï¸ Edit</a>
                      <a href="/food-entries/delete/<%= foodEntry.id %>" class="btn btn-danger btn-sm">ğŸ—‘ï¸ Delete</a>
                    </td>
                  </tr>
                  <% } %>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-JU8TZCqY6gIQqp6YkdPGywY5nF3KxR8B5vM6UlkF9ufl8eOr0d+L3lO4fzIz5B5A" crossorigin="anonymous"></script>
  </body>
</html>
