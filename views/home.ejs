<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>CICO Tracker - Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <style>
      @keyframes spin-slow {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
      }
      @keyframes spin-medium {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
      }
      @keyframes spin-fast {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
      }
      .spinner-slow {
        animation: spin-slow 3s linear infinite;
      }
      .spinner-medium {
        animation: spin-medium 1.5s linear infinite;
      }
      .spinner-fast {
        animation: spin-fast 0.8s linear infinite;
      }
      .calorie-card {
        transition: all 0.3s ease;
      }
      .calorie-card:hover {
        transform: scale(1.05);
      }
      .exercise-card {
        border-left: 4px solid #0d6efd;
      }
    </style>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">üçΩÔ∏è CICO Tracker</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/food-entries">Food Entries</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/food-entries/create">Add Food Entry</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/settings">Settings</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container mt-5">
      <!-- Calorie Status Section -->
      <div class="row mb-5">
        <div class="col-md-12">
          <div class="card calorie-card shadow-lg <%= totalCalories < targetCalories ? 'border-success' : totalCalories < limitCalories ? 'border-warning' : 'border-danger' %>">
            <div class="card-body text-center p-5">
              <h2 class="mb-3">Total Calorie Intake</h2>
              <div class="d-flex justify-content-center align-items-center mb-4">
                <div class="spinner-border <%= totalCalories < targetCalories ? 'text-success spinner-slow' : totalCalories < limitCalories ? 'text-warning spinner-medium' : 'text-danger spinner-fast' %>" 
                     role="status" style="width: 5rem; height: 5rem; border-width: 0.5rem;">
                  <span class="visually-hidden">Loading...</span>
                </div>
                <h1 class="display-1 ms-4 mb-0 <%= totalCalories < targetCalories ? 'text-success' : totalCalories < limitCalories ? 'text-warning' : 'text-danger' %>">
                  <%= totalCalories %>
                </h1>
                <span class="fs-3 ms-2 <%= totalCalories < targetCalories ? 'text-success' : totalCalories < limitCalories ? 'text-warning' : 'text-danger' %>">cal</span>
              </div>
              
              <% 
                let calorieStatus = '';
                let statusClass = '';
                let spinnerSpeed = '';
                if (totalCalories < targetCalories) {
                  calorieStatus = '‚úÖ Great! You\'re on track!';
                  statusClass = 'success';
                  spinnerSpeed = 'Spinning slowly - you\'re doing great!';
                } else if (totalCalories < limitCalories) {
                  calorieStatus = '‚ö†Ô∏è Moderate intake - watch your next meals!';
                  statusClass = 'warning';
                  spinnerSpeed = 'Spinning faster - getting close to limit!';
                } else {
                  calorieStatus = 'üî¥ High calorie intake - time for exercise!';
                  statusClass = 'danger';
                  spinnerSpeed = 'Spinning fast - burn those calories!';
                }
              %>
              
              <div class="alert alert-<%= statusClass %> mb-3">
                <h4><%= calorieStatus %></h4>
                <p class="mb-0"><em><%= spinnerSpeed %></em></p>
              </div>

              <div class="progress" style="height: 30px;">
                <div class="progress-bar <%= totalCalories < targetCalories ? 'bg-success' : totalCalories < limitCalories ? 'bg-warning' : 'bg-danger' %>" 
                     role="progressbar" 
                     style="width: <%= Math.min((totalCalories / limitCalories) * 100, 100) %>%"
                     aria-valuenow="<%= totalCalories %>" 
                     aria-valuemin="0" 
                     aria-valuemax="<%= limitCalories %>">
                  <%= Math.round((totalCalories / limitCalories) * 100) %>%
                </div>
              </div>
              <div class="mt-2">
                <small class="text-muted">
                  Target: <%= targetCalories %> calories | Limit: <%= limitCalories %> calories
                  <a href="/settings" class="ms-2 text-decoration-none">‚öôÔ∏è Edit Goals</a>
                </small>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Exercise Recommendations -->
      <div class="row mb-4">
        <div class="col-md-12">
          <h2 class="mb-4">üí™ Recommended Exercises to Burn Calories</h2>
          <p class="lead">Based on your total intake of <strong><%= totalCalories %></strong> calories, here are exercises to help you burn them off:</p>
        </div>
      </div>

      <div class="row g-4 mb-5">
        <%
          const exercises = [
            { name: 'Running', calories125: 652, calories155: 808, calories185: 965, icon: 'üèÉ' },
            { name: 'Water Polo', calories125: 566, calories155: 703, calories185: 839, icon: 'ü§Ω' },
            { name: 'Bicycling', calories125: 480, calories155: 596, calories185: 710, icon: 'üö¥' },
            { name: 'Calisthenics', calories125: 480, calories155: 596, calories185: 710, icon: 'ü§∏' },
            { name: 'Circuit Training', calories125: 480, calories155: 596, calories185: 710, icon: 'üèãÔ∏è' },
            { name: 'Jump Rope', calories125: 453, calories155: 562, calories185: 671, icon: 'ü™¢' },
            { name: 'Stationary Bicycling', calories125: 420, calories155: 520, calories185: 622, icon: 'üö¥' },
            { name: 'Rowing Machine', calories125: 420, calories155: 520, calories185: 622, icon: 'üö£' },
            { name: 'Aerobic Dance', calories125: 396, calories155: 492, calories185: 587, icon: 'üíÉ' },
            { name: 'Swimming (casual)', calories125: 396, calories155: 492, calories185: 587, icon: 'üèä' },
            { name: 'Jogging', calories125: 396, calories155: 492, calories185: 587, icon: 'üèÉ' },
            { name: 'Hiking', calories125: 340, calories155: 421, calories185: 503, icon: 'ü•æ' }
          ];

          const bodyWeight = 155; // Default to 155 lbs for calculation
        %>

        <% exercises.slice(0, 6).forEach(function(exercise) { 
          const caloriesPerHour = bodyWeight === 125 ? exercise.calories125 : bodyWeight === 185 ? exercise.calories185 : exercise.calories155;
          const minutesNeeded = Math.round((totalCalories / caloriesPerHour) * 60);
          const hours = Math.floor(minutesNeeded / 60);
          const minutes = minutesNeeded % 60;
          const timeText = hours > 0 ? `${hours}h ${minutes}m` : `${minutes}m`;
        %>
        <div class="col-md-4">
          <div class="card h-100 exercise-card shadow-sm">
            <div class="card-body">
              <h3 class="card-title"><%= exercise.icon %> <%= exercise.name %></h3>
              <hr>
              <div class="mb-3">
                <h5 class="text-primary">Calories burned per hour:</h5>
                <div class="row text-center">
                  <div class="col-4">
                    <small class="text-muted">125 lbs</small>
                    <div class="fw-bold"><%= exercise.calories125 %></div>
                  </div>
                  <div class="col-4 bg-light">
                    <small class="text-muted">155 lbs</small>
                    <div class="fw-bold text-primary"><%= exercise.calories155 %></div>
                  </div>
                  <div class="col-4">
                    <small class="text-muted">185 lbs</small>
                    <div class="fw-bold"><%= exercise.calories185 %></div>
                  </div>
                </div>
              </div>
              <div class="alert alert-info mb-0">
                <strong>Time needed (155 lbs):</strong><br>
                <span class="fs-4"><%= timeText %></span>
              </div>
            </div>
          </div>
        </div>
        <% }); %>
      </div>

      <!-- Recent Entries -->
      <% if (foodEntries && foodEntries.length > 0) { %>
      <div class="row mb-5">
        <div class="col-md-12">
          <h3 class="mb-4">üìä Recent Food Entries</h3>
          <div class="table-responsive">
            <table class="table table-striped">
              <thead class="table-dark">
                <tr>
                  <th>Date & Time</th>
                  <th>Food Name</th>
                  <th>Calories</th>
                  <th>Serving</th>
                </tr>
              </thead>
              <tbody>
                <% foodEntries.slice(0, 5).forEach(function(entry) { %>
                <tr>
                  <td><%= new Date(entry.dateTime).toLocaleString() %></td>
                  <td><%= entry.foodName %></td>
                  <td><span class="badge bg-info"><%= entry.calories %> cal</span></td>
                  <td><%= entry.servingSize %> <%= entry.unit %></td>
                </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
          <a href="/food-entries" class="btn btn-outline-primary">View All Entries ‚Üí</a>
        </div>
      </div>
      <% } %>

      <!-- Quick Actions -->
      <div class="row mb-5">
        <div class="col-md-12 text-center">
          <h3 class="mb-4">Quick Actions</h3>
          <div class="d-grid gap-2 d-md-block">
            <a href="/food-entries" class="btn btn-primary btn-lg">üìã View All Entries</a>
            <a href="/food-entries/create" class="btn btn-success btn-lg">‚ûï Add New Entry</a>
            <a href="/settings" class="btn btn-outline-secondary btn-lg">‚öôÔ∏è Settings</a>
          </div>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-JU8TZCqY6gIQqp6YkdPGywY5nF3KxR8B5vM6UlkF9ufl8eOr0d+L3lO4fzIz5B5A" crossorigin="anonymous"></script>
  </body>
</html>
